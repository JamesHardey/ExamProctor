{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "includeFiles": [
    "server/**",
    "shared/**",
    "drizzle.config.ts"
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
